<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="TPUM App 2021" Height="450" Width="800">
    <Grid x:Name="mainGrid">

        <Grid.RowDefinitions>
            <RowDefinition Height = "*" />
            <RowDefinition Height = "25" />
        </Grid.RowDefinitions>

        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1"  Background="LightGray"/>
        
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "170" />
                <ColumnDefinition Width = "*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="Black" Background="Firebrick" BorderThickness="1"/>

            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24
                   " Margin="0,10,0,0" Height="45" Width="130" TextAlignment="Center">
            TPUM 2021
            </TextBlock>
            <Button x:Name="button1" Content="Button 1" HorizontalAlignment="Center" VerticalAlignment="Top" HorizontalContentAlignment="Center" Margin="0,104,0,0" Click="TestFunction" Width="80" Height="20"/>
            <Button x:Name="button2" Content="Button 2" HorizontalAlignment="Center" VerticalAlignment="Top" HorizontalContentAlignment="Center" Margin="0,129,0,0" Click="TestFunction" Width="80" Height="20"/>
            <Button x:Name="button3" Content="Button 3" HorizontalAlignment="Center" VerticalAlignment="Top" HorizontalContentAlignment="Center" Margin="0,154,0,0" Click="TestFunction" Width="80" Height="20"/>
            <Label x:Name="lastButtonLabel" Content="Last button:" HorizontalAlignment="Center" VerticalAlignment="Bottom" HorizontalContentAlignment="Center" Width="80" Height="25" Margin="0,0,0,20"/>
        </Grid>
        <Label Content="Andrzej Miszczak, Jakub Guzek 2021" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Stretch" Height="25" Margin="405,0,0,0" Width="215" RenderTransformOrigin="0.5,0.5" Grid.Row="1" HorizontalContentAlignment="Right"/>
    </Grid>
</Window>
