<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="TPUM App 2021" Height="450" Width="800">
    <Grid x:Name="mainGrid">

        <Grid.RowDefinitions>
            <RowDefinition Height = "*" />
            <RowDefinition Height = "25" />
        </Grid.RowDefinitions>

        <Border x:Name="footer" Grid.Row="1" BorderBrush="Black" BorderThickness="1"  Background="LightGray"/>

        <Label x:Name="AuthorsLabel" Content="Andrzej Miszczak, Jakub Guzek 2021" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Stretch"
               Height="25" Margin="405,0,0,0" Width="215" RenderTransformOrigin="0.5,0.5" HorizontalContentAlignment="Right"/>

        <Grid x:Name="innerGrid" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "170" />
                <ColumnDefinition Width = "*" />
            </Grid.ColumnDefinitions>

            <Border x:Name="leftPanel" Grid.Column="0" BorderBrush="Black" Background="Firebrick" BorderThickness="1"/>

            <TextBlock x:Name="AppNameTextBox" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30" Foreground="White"
                       Margin="0,10,0,0" Height="45" Width="167" TextAlignment="Center">
            TPUM 2021
            </TextBlock>

            <Button x:Name="button1" Content="Button 1" HorizontalAlignment="Center" VerticalAlignment="Top"
                    HorizontalContentAlignment="Center" Margin="0,104,0,0" Width="80" Height="20"
                    Command="{Binding ButtonTest}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
            <Button x:Name="button2" Content="Button 2" HorizontalAlignment="Center" VerticalAlignment="Top"
                    HorizontalContentAlignment="Center" Margin="0,129,0,0" Width="80" Height="20"
                    Command="{Binding ButtonTest}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
            <Button x:Name="button3" Content="Button 3" HorizontalAlignment="Center" VerticalAlignment="Top"
                    HorizontalContentAlignment="Center" Margin="0,154,0,0" Width="80" Height="20"
                    Command="{Binding ButtonTest}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>

            <TextBox x:Name="newName" Text="{Binding InputName, Mode=TwoWay}" DataContext="{Binding InputVM}" HorizontalAlignment="Stretch" Margin="0,253,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="106"/>
            <TextBox x:Name="newAge" Text="{Binding InputAge, Mode=TwoWay}" DataContext="{Binding InputVM}" Margin="32,276,32,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="106"/>

            <Label Content="Enter new User" HorizontalAlignment="Stretch" Margin="0,217,0,0" VerticalAlignment="Top" Width="106" HorizontalContentAlignment="Center" Foreground="White"/>
            <Button Content="Add to data set" Margin="32,299,32,0" VerticalAlignment="Top" Width="106" 
                    Command="{Binding AddNewVM}"/>


            <Label x:Name="lastButtonLabel" Content="Last button:" HorizontalAlignment="Center" VerticalAlignment="Top"
                   Foreground="White" HorizontalContentAlignment="Center" Width="150" Height="25" Margin="0,364,0,0"/>
            <ListView x:Name="listView" Grid.Column="1" HorizontalAlignment="Center" Height="389" VerticalAlignment="Center" Width="610"
                      ItemsSource="{Binding Collection}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Age" DisplayMemberBinding="{Binding Age}"/>
                        <GridViewColumn Header="Show">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content = "_Show..." Command="{Binding ShowName}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Window>
